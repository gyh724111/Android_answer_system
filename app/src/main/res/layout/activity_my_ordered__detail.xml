<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.yonghuige.testjson.avtivitys.MyOrdered_Detail">


    <TextView
        android:id="@+id/tv_MODetail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:text="预约课程"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentEnd="true" />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:text="学生信息"
        android:layout_below="@+id/tv_MODetail_title"/>

    <TextView
        android:id="@+id/tv_text_orderinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/tv_MODetail_title"
        android:layout_alignParentRight="true"
        android:text="预定信息"
        android:textColor="#000000"
        android:textSize="15dp" />
    <ListView
        android:id="@+id/lv_MOed_Detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_text_orderinfo"
        android:divider="#60e6e6e6"
        android:dividerHeight="10dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
