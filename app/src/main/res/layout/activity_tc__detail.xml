<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tc__detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.yonghuige.testjson.avtivitys.TC_Detail">

    <TextView
        android:id="@+id/td_tc_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TCs_id" />


    <TextView
        android:id="@+id/td_tc_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:text="TCs_Teacher_Name"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="教师姓名:"
        android:textColor="#ff000000"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/td_tc_these_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="10dp"
        android:text="TCs_These_Courses"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="当前科目:"
        android:textColor="#ff000000"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/td_tc_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="80dp"
        android:text="TCs_Others:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="55dp"
        android:text="备注:"
        android:textColor="#ff000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/td_tc_answer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="165dp"
        android:textSize="12dp"
        android:text="TCs_Answer_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="140dp"
        android:text="答疑时间："
        android:textColor="#ff000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_tc_order_count_hint"
        android:text="预约人数:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/td_tc_these_courses"
        android:layout_alignStart="@+id/td_tc_these_courses"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_marginTop="96dp" />

    <Button
        android:id="@+id/btn_tc_to_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约"
        android:layout_alignTop="@+id/tv_tc_order_count_hint"
        android:layout_alignStart="@+id/td_tc_answer_time" />

    <TextView
        android:id="@+id/td_tc_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginLeft="20dp"
        android:text="TCs_Order_Count"
        android:layout_below="@+id/tv_tc_order_count_hint" />


</RelativeLayout>
