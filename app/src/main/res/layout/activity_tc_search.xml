<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.yonghuige.testjson.avtivitys.TC_Search">

    <TextView
        android:id="@+id/hint_T_N"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="教师姓名："
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_T_N"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_above="@+id/hint_T_Cs"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/hint_T_N"
        android:gravity="center_vertical"
        android:background="#60e6e6e6"
        android:hint="输入教师名称"
        android:paddingLeft="10dp"
        android:textSize="12dp" />

    <ListView
        android:id="@+id/lvTCs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:divider="#60e6e6e6"
        android:dividerHeight="10dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/hint_T_Cs"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hint_T_N"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="负责科目："
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_tc_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hint_T_Cs"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:background="#cd6f89f1"
        android:text="查询" />

    <EditText
        android:id="@+id/et_T_Cs"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@+id/hint_T_N"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/hint_T_Cs"
        android:gravity="center_vertical"
        android:background="#60e6e6e6"
        android:hint="输入负责科目"
        android:paddingLeft="10dp"
        android:textSize="12dp" />
</RelativeLayout>
