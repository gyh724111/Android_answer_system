<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.yonghuige.testjson.avtivitys.GuideActivity">

    <TextView
        android:text="请选择要使用的功能"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/tv_guide_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="被预约的答疑"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to_moed"
        android:layout_alignBaseline="@+id/btn_to_mo"
        android:layout_alignBottom="@+id/btn_to_mo"
        android:layout_toEndOf="@+id/btn_to_tc" />

    <Button
        android:id="@+id/btn_to_mo"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_to_tc"
        android:layout_below="@+id/btn_to_tc"
        android:layout_marginTop="31dp"
        android:text="我预约的答疑" />

    <Button
        android:text="坐班答疑查询"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/btn_to_tc"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/tv_guide_title"
        android:layout_toStartOf="@+id/btn_to_rp" />

    <Button
        android:text="联系方式查询"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:id="@+id/btn_to_rp"
        android:layout_alignBaseline="@+id/btn_to_tc"
        android:layout_alignBottom="@+id/btn_to_tc"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
